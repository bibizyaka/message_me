<h1 align="center">Welcome to MessageMe - <em>a complete</em> Chat App</h1>
<h4 class="ui center aligned medium icon header">
  <i class="orange circular power off icon"></i>
   Log in to continue...
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
       <%= form_for(:session, url: login_path, html: {class: "ui form"}) do |f| %><!-- <div class="ui form">-->
        <div class="field">
           <%= f.label :Username %>
          <div class="ui left icon input">
           <%= f.text_field :username, placeholder: "Username" %> <!-- <input type="text" placeholder="Username"> -->
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :Password %>
          
          <div class="ui left icon input">
            <%= f.text_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
         <%= f.submit "Login", class: "ui submit button" %><!--<div class="ui blue submit button">Login</div>-->
      </div>
    <% end %>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>